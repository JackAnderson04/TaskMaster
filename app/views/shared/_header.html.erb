<header class="bg-slate-800 shadow-sm border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Brand -->
      <%= link_to root_path, class: "flex items-center space-x-2 text-2xl font-bold text-white hover:text-orange-600 transition-colors" do %>
        <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span>Schedule</span>
      <% end %>
      
      <!-- Navigation Links -->
      <nav class="hidden md:flex items-center space-x-8">
        <%= link_to "Dashboard", root_path, 
            class: "text-gray-300 hover:text-white px-3 py-2 text-sm font-medium transition-colors #{current_page?(root_path) ? 'text-orange-400 border-b-2 border-orange-400' : ''}" %>
        
        <%= link_to "Events", events_path, 
            class: "text-gray-300 hover:text-white px-3 py-2 text-sm font-medium transition-colors #{current_page?(events_path) ? 'text-orange-400 border-b-2 border-orange-400' : ''}" %>
        
        <!-- Future: Strava Analytics link -->
        <!-- <%= link_to "Analytics", "#", class: "text-gray-400 px-3 py-2 text-sm font-medium cursor-not-allowed" %> -->
      </nav>
      
      <!-- Action Buttons -->
      <div class="flex items-center space-x-4">
        <%= link_to new_event_path, 
            class: "bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors flex items-center space-x-2" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>New Event</span>
        <% end %>
        
        <!-- Mobile menu button -->
        <button class="md:hidden p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>